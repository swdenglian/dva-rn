{
  "compilerOptions": {
    "target": "es2015",
    "outDir": "./lib",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "noEmitOnError": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}
